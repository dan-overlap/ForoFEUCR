<p id="notice"><%= notice %></p>

<h1>Ponencias por Categoría</h1>

<table class = "table">
  <thead>
    <tr class = "column">
      <th>Categoría</th>
      <th>Descripción</th>
      <th>Cantidad de ponencias</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Congress.find(params[:congress_id]).categories.each do |category| %>
      <tr class = "column">
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= category.presentations.count %></td>
        <td><%= link_to 'Ir a', congress_category_path(params[:congress_id], category), class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_congress_category_path(params[:congress_id],  category), class: "btn btn-info" %></td>
        <td><%= link_to 'Eliminar', congress_category_path(params[:congress_id], category), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar categoría', new_congress_category_path, class: "btn btn-info" %>
