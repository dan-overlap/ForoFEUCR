<div class="panel panel-default">
      <div class="panel-heading">
        <a href="#" class="MakaleYazariAdi"><%User.find(1).username%> Por: Ariel Gonzalo Sanchez</a>
        <div class="dropdown" style="float:right;">
          <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="glyphicon glyphicon-cog"></span>
            <span class="sr-only">Toggle Dropdown</span>
            </button>
          <ul class="dropdown-menu">
            <li><a href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Editar</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span> Eliminar</a></li>
          </ul>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="panel-body">
        <div class="media">
          <div class="media-top">
            <a href="#">
              <img class="d-flex align-self-center mr-3" src=<%=news.picture %>>
            </a>
            <span><h4 class="media-right media-top "> <%=news.title%></h4></span>
          </div>
          <div class="media-body">
            <div align="right">
              <button data-toggle="collapse" data-target="#content_<%=news.id%>" class= "btn btn-xs btn-default">Ver m√°s</button>
            </div>
            <div id="content_<%=news.id%>" class="collapse">
              <%=news.content%>
            </div>
            <div class="clearfix"></div>
            <div class="btn-group" role="group" id="BegeniButonlari">
              <%= button_to like_congress_news_path(@congress, news), id: "liked-btn", class: "btn btn-default", :method => :put, remote: true do %>
              <!-- <button type="button" class="liked-btn"><span class="glyphicon glyphicon-thumbs-up"></span></button> -->
              <div>
                <span><i class="glyphicon glyphicon-thumbs-up"></i></span>
              </div>
              <% end %>
              <span id="count_<%= news.id %>" class='likes-count'> <%=news.get_upvotes.size %> </span>
            </div>                 
          </div>
        </div>
      </div>
    </div>