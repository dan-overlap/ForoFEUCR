<div class="container">
  <h1>Comments</h1>

  <table>
    <thead>
      <tr>
        <th>Author</th>
        <th>Title</th>
        <th>Body</th>
        <th>Replies</th>
        <th>Likes</th>
        <th>Dislikes</th>
        <th>Is important</th>
        <th>Is inappropriate</th>
        <th>Reviewed</th>
        <th>Denounced</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.author_id %></td>
        <td><%= comment.title %></td>
        <td><%= comment.body %></td>
        <td><%= comment.replies_id %></td>
        <td><%= comment.likes_id %></td>
        <td><%= comment.dislikes_id %></td>
        <td><%= comment.is_important %></td>
        <td><%= comment.is_inappropriate %></td>
        <td><%= comment.reviewed %></td>
        <td><%= comment.denounced %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Comment', new_comment_path %>
</div>
