<div class="container">

<h1>Downloads</h1>

<table class="table">
  <thead>
    <tr class="column">
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @downloads.each do |download| %>
      <tr>
        <td><%= download.name %></td>
        <td><%= download.description %></td>
        <td><%= link_to 'Ver', congress_download_path(@congress,download), class: "btn btn-info" %></td>
        <td><%= link_to 'Descargar', download.file.url(:original),
    download: download.file.url(:original), class: "btn btn-info" %></td>
        <%if current_user.try(:admin?)%>
           <td><%= link_to 'Editar', edit_congress_download_path(@congress,download), class: "btn btn-info" %></td>
           <td><%= link_to 'Eliminar', [@congress,download], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>

        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user.try(:admin?)%>
    <%= link_to 'Nuevo Documento', new_congress_download_path(@congress), class: "btn btn-info" %>
<%end%>
</div>



