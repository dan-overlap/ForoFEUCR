<div class="container">
  <h2 style="color: white">Registrarse</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>



    <div class="form">
      <div class="form-group">
        <%= f.label :email, class: "form-label"   %>
        <%= f.email_field :email, autofocus: true, class: "form-control"   %>
      </div>


      <div class="form-group">
        <%= f.label "Nombre completo" %>
        <%= f.text_field :username, class: "form-control"   %>
      </div>

      <div class="form-group">
        <%= f.label "Carnet" %>
        <%= f.text_field :user_id, class: "form-control"   %>
      </div>

    <div class="form-group">
      <%= f.label "Contraseña" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres como mínimo)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control"   %>
    </div>

    <div class="form-group">
      <%= f.label "Confirmar contraseña" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"   %>
    </div>

    <div class="form-group">
      <%= f.submit "Registrarse", class: "btn btn-info"%>
    </div>
  </div>

<% end %>
<div class="pull-right"><%= render "devise/shared/links" %></div>

