  <% elsif alert %>
    <div id="notice_wrapper">
      <p class="notice" ><%= alert %></p>
    </div>

  <% end %>

  <div style='min-height: 100%'>

    <nav class="navbar navbar-inverse navbar-top" style="min-height: 120px; vertical-align: middle; background-color: #3fa7df ">
      <div class="container-fluid" style=" background-color: #3fa7df ">
