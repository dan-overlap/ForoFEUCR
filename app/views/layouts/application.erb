<!DOCTYPE html>
<html>
  <head>
    <title>ForoFEUCR</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<!--

 -->


  </head>

  <body>

    

    <div id="main-container" class="container">
    
      <p class="notice"><%= notice %></p>
      <p class="alert" ><%= alert %></p>
      <div class="row">
        
          <!-- sidebar content -->
          <% if !user_signed_in? %>
              <%= link_to "Registrarse", new_user_registration_path, class: 'btn btn-primary' %>
              <%= link_to "Iniciar sesión", new_user_session_path, class: 'btn btn-success' %>
          <%else%>
              <%= link_to "Cerrar sesión",  destroy_user_session_path, :method => :delete, class: 'btn btn-default' %>
          <%end%>

      
    </div>  
    <%= yield %>
  </body>
</html>
