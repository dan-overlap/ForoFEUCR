<!DOCTYPE html>
<meta charset="UTF-8">
<html>
<head>
	<title><%= Congress.find(@congress).name %></title>

	<%= csrf_meta_tags %>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
	<div style='min-height: 100%'>
			
		<nav class="navbar navbar-inverse navbar-top">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="#"><%= Congress.find(@congress).name %></a>
				</div>
				<ul class="nav navbar-nav">
					<li class="active"><a href="#">Inicio</a></li>
					<li><%= link_to "Ponencias", congress_categories_path(@congress) %></li>
					<li><a href="#">Proximos eventos</a></li>
					<li><a href="#">Noticias</a></li>
					<li><a href="#">Descargas</a></li>
					<li><a href="http://www.ucr.ac.cr">UCR</a></li>
				</ul>
				<ul class="nav navbar-nav pull-right">
					<% if !user_signed_in? %>
					<li><%= link_to "Registrarse", new_user_registration_path, class: "pull-right" %></li>
					<li><%= link_to "Iniciar sesión", new_user_session_path %></li>
					<%else%>
					<li><%= link_to "Cerrar sesión",  destroy_user_session_path, :method => :delete %></li>
					<%end%>
				</ul>
			</div>
		</nav>

		<!-Banner!>

		<div id="myCarousel" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
				<li data-target="#myCarousel" data-slide-to="2"></li>
			</ol>

			<!-- Wrapper for slides -->
			<div class="carousel-inner">
				<div class="item active">
					<img src="http://overlapcr.com/media/feucr/bn1.jpg" alt="Congreso">
				</div>

				<div class="item">
					<img src="http://overlapcr.com/media/feucr/bn2.jpg" alt="Feucr">
				</div>

				<div class="item">
					<img src="http://overlapcr.com/media/feucr/bn3.jpg" alt="UCR">
				</div>
			</div>

			<!-- Left and right controls -->
			<a class="left carousel-control" href="#myCarousel" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#myCarousel" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>

		<!-Fin de Banner!>

		<div id="main-container" class="container">

			<p class="notice"><%= notice %></p>
			<p class="alert" ><%= alert %></p>

		</div> 
		<div class="container">
			<%= yield %>
		</div>
	</div>
</body>

<div id="footer" class="footer-distributed footer">

	<div class="footer-right">

		<a href=<%= "http://"+@congress.facebook_dir.to_s %>><i class="fa fa-facebook-square"></i></a>
		<a href=<%= "http://"+@congress.twitter_dir.to_s %>><i class="fa fa-twitter"></i></a>
		

	</div>

	<div class="footer-left">

		<p class="footer-links">
			<a href=<%= congress_path(@congress) %>>Inicio</a>
			·
			<%= link_to "Ponencias", congress_categories_path(@congress) %>
			·
			<a href="#">Próximos eventos</a>
			·
			<a href="#">Noticias</a>
			·
			<a href="#">Descargas</a>
			·
			<a href="http://www.ucr.ac.cr">UCR</a>
		</p>

		<p><%=@congress.name%> &copy; <%= Time.current.year %></p>
	</div>

</div>


</html>
