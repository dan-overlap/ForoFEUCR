<!DOCTYPE html>
<meta charset="UTF-8">
<html>
  <head>
    <title>ForoFEUCR</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<!--

 -->


  </head>

  <body>

       <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><%= Congress.find(params[:congress_id]).name %></a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="#">Inicio</a></li>
      <li><a href="#">Ponencias</a></li>
      <li><a href="#">Proximos eventos</a></li>
      <li><a href="#">Noticias</a></li>
    </ul>
  </div>
</nav>

    <div id="main-container" class="container">
    
      <p class="notice"><%= notice %></p>
      <p class="alert" ><%= alert %></p>
      <h1><%= Congress.find(params[:congress_id]).name %></h1>
      <div class="row">
        <div id="sidebar" class="col-xs-3">
          
          <% if !user_signed_in? %>
              <%= link_to "Registrarse", new_user_registration_path, class: 'btn btn-primary' %>
              <%= link_to "Iniciar sesión", new_user_session_path, class: 'btn btn-success' %>
          <%else%>
              <%= link_to "Cerrar sesión",  destroy_user_session_path, :method => :delete, class: 'btn btn-default' %>
          <%end%>
        </div>

      
    </div>  
    <%= yield %>
  </body>
</html>
